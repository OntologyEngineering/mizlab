public class Node {
    double x;
    double y;

    double x1;
    double y1;
    double x2;
    double y2;

    boolean selected = false;

    String lbl;

    //座標がノード上であるかどうか
    boolean on_node(double xx,double yy){
      if(xx>=x1 && xx<=x2 && yy<=y1 && yy>=y2){
        //System.out.println("TRUE");
        return true;
      }
      else{
        //System.out.println("FALSE");
        return false;
      }
    }

}